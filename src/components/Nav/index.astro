---
import { Navbar } from 'astro-bootstrap';
import type { NavbarItemType } from 'astro-bootstrap';
const siteTitle = 'John Koelle Paino'; // pull this in from a config file
const items: NavbarItemType[] = [
  // pull this in from a config file
  { text: 'Biography', href: '/history-koelle-piano' },
  {
    text: 'Restoration',
    subItems: [
      { text: 'The Restoration Process', href: '#' },
      { divider: true },
      { text: 'Restoration Service', href: '#' },
    ],
  },
  {text:"Tuning and service" , href:"#"},
  {text:"Pianos for sale" , href:"#"},
  {text:"Contact Us" , href:"#"},
  {text:"Blog" , href:"#"},
  {text:"Testimonials" , href:"#"},
];

const id = 'topNavBar';
---
<Navbar class="navbar-expand-lg bg-primary" data-bs-theme="dark">
    <div class="container-fluid">
      <a class="navbar-brand" href="/"> <img src="https://jkpiano.com/wp-content/uploads/2017/12/Screenshot-2017-11-30-20.56.49.png"   class="logo" alt="logo"></a>
      <Navbar.Toggler controls={id} />
      <Navbar.Collapse {id}>
        <Navbar.Items {items} class="me-auto mb-2 mb-lg-0" />
      </Navbar.Collapse>
    </div>
</Navbar>